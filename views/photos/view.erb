<div class="container">

<div class="row">
  <div class="span16">
    <h2><%== @photo.title %></h2>
  </div>
</div>

<div class="row">

  <div class="span11">

    <p><img src="<%= @photo.full_url('z') %>" <%= @photo.wh_attr('z') %>  /></p>
    <p><%= format_text @photo.description %></p>

  </div><!-- left col -->
  <div class="span5">

    <div class="sidebar-widget">
      <p><a href="<%= @photo.url %>">view on flickr</a></p>
      <p>Taken on <%= @photo.date_taken.strftime "%B %e, %Y" %>
    </div>

    <% if @people.count > 0 %>
    <div class="sidebar-widget">
      <h3>People</h3>
      <ul>
        <% @people.each do |person| %>
          <li><a href="<%= person.page @photo %>"><%= person.realname %></a></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <% if @photosets.count > 0 %>
    <div class="sidebar-widget">
      <h3>Sets</h3>
      <ul>
        <% @photosets.each do |photoset| %>
          <li><a href="<%= photoset.page @photo %>"><%= photoset.title %></a></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <% if @photo_tags.count > 0 %>
    <div class="sidebar-widget">
      <h3>Tags</h3>
      <ul class="tags">
        <% @photo_tags.each do |tag| %>
          <li><a href="<%= tag.page @photo %>"><%= tag.name %></a></li>
        <% end %>
      </ul>
      <div style="clear: both;"></div>
    </div>
    <% end %>

    <% if @machine_tags.count > 0 %>
    <div class="sidebar-widget">
      <h3>Machine Tags</h3>
      <ul>
        <% @machine_tags.each do |tag| %>
          <li><a href="<%= tag.page @photo %>"><%= tag.name %></a></li>
        <% end %>
      </ul>
    </div>
    <% end %>

  </div><!-- right col-->

</div><!-- row -->

</div><!-- container -->