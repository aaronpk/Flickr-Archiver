<div class="container">

<div class="row page-title">
  <div class="span16">
    <h2><%== @title %></h2>
  </div>
</div>

<div class="row">

  <div class="span12">

    <ul class="media-grid photos">
      <% @photos.each do |photo| %>
        <li class="<%= photo.get_class %>">
          <a href="<%= photo.page @list %>">
            <img class="thumbnail" src="<%= photo.full_url('sq') %>" <%= photo.wh_attr('sq') %> />
          </a>
        </li>
      <% end %>
    </ul>
    <% if @photos.length == 0 %>
      <section id="home" style="margin-top: 30px;">
        <div class="hero-unit" style="text-align: center;">
          <h2>No Photos Found</h2>
          <p>Sorry, there are no photos for you here.</p>
        </div>
      </section>
    <% end %>

    <div class="pagination">
      <%= @photos.pager.to_html(@list.page, :size => 9, :more_text => '<span>...</span>') %>
    </div>
    
  </div><!-- left col -->
  <div class="span4">
    
    <% if @related_sets && @related_sets.length > 0 %>
      <div class="sidebar-widget related">
        <h3><%= @related_titles[:sets] %></h3>
        <ul>
          <% @related_sets.each do |link| next if !link.photoset %>
            <li><a href="<%= link.photoset.page %>"><%= link.photoset.display_name %> <span class="num">(<%= link.photoset.num %>)</span></a></li>
          <% end %>
        </ul>
      </div>    
    <% end %>

    <% if @related_people && @related_people.length > 0 %>
      <div class="sidebar-widget related">
        <h3><%= @related_titles[:people] %></h3>
        <ul>
          <% @related_people.each do |link| next if !link.person %>
            <li><a href="<%= link.person.page %>"><%= link.person.display_name %></a> <span class="num">(<%= link.person.num %>)</span></li>
          <% end %>
        </ul>
      </div>    
    <% end %>

    <% if @related_tags && @related_tags.length > 0 %>
      <div class="sidebar-widget related">
        <h3><%= @related_titles[:tags] %></h3>
        <ul>
          <% @related_tags.each do |link| next if !link.tag %>
            <li><a href="<%= link.tag.page %>"><%= link.tag.display_name %></a> <span class="num">(<%= link.tag.num %>)</span></li>
          <% end %>
        </ul>
      </div>    
    <% end %>

    <% if @related_places && @related_places.length > 0 %>
      <div class="sidebar-widget related">
        <h3><%= @related_titles[:places] %></h3>
        <ul>
          <% @related_places.each do |link| next if !link.place %>
            <li><a href="<%= link.place.page %>"><%= link.place.display_name %></a> <span class="num">(<%= link.place.num %>)</span></li>
          <% end %>
        </ul>
      </div>    
    <% end %>

    <div class="sidebar-widget related">
      <h3>Dates</h3>
      <ul>
        <% @related_dates[:years].each do |year| %>
          <li><a href="/<%= @user.username %>/<%= year %>"><%= year %></li>
        <% end %>
        <% @related_dates[:months].each do |month| %>
          <li><a href="<%= "/%{@user.username}/%{month[:year]}/%{month[:month]}" %>"><%= DateTime.new(month[:year], month[:month], 1).strftime("%B %Y") %></li>
        <% end %>
      </ul>
    </div>

  </div><!-- right col-->

</div><!-- row -->

</div><!-- container -->
