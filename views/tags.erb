<div class="container">

<div class="row">

  <div class="span8 offset4">

    <div class="tags">
      <ul>
        <% @tags.each_with_index do |tag,i| %>
          <li class="weight-<%= ((tag.num.to_f * 10.0) / @max_photos.to_f).round %>"><a href="<%= tag.page %>"><%= tag.name %></a></li>
        <% end %>
      </ul>
    </div>

  </div>

</div><!-- row -->

</div><!-- container -->
